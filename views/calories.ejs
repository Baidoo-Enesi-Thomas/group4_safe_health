<!DOCTYPE html>
<html>
  <head>
    <title>Calories Calculator</title>
    <link rel="stylesheet" type="text/css" href="/stylesheet/calories.css" />
    <script src="https://cdn.jsdelivr.net/npm/vue@3.0.5"></script>
  </head>
  <body>
    <div id="app">
      <div class="card">
        <h2>Calories Calculator</h2>
        <div class="input-container">
          <label for="age">Age:</label>
          <input type="number" v-model="age" />
        </div>
        <div class="input-container">
          <label for="gender">Gender:</label>
          <select v-model="gender">
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
        <div class="input-container">
          <label for="weight">Weight (kg):</label>
          <input type="number" v-model="weight" />
        </div>
        <div class="input-container">
          <label for="height">Height (cm):</label>
          <input type="number" v-model="height" />
        </div>
        <div class="input-container">
          <label for="activityLevel">Activity Level:</label>
          <select v-model="activityLevel">
            <option value="1.2">Sedentary (little or no exercise)</option>
            <option value="1.375">
              Lightly active (light exercise/sports 1-3 days/week)
            </option>
            <option value="1.55">
              Moderately active (moderate exercise/sports 3-5 days/week)
            </option>
            <option value="1.725">
              Very active (hard exercise/sports 6-7 days a week)
            </option>
            <option value="1.9">
              Extra active (very hard exercise/sports & physical job)
            </option>
          </select>
        </div>
        <button @click="calculateCalories">Calculate</button>
        <div class="result" v-if="calories !== null">
          <p>Your daily calorie intake should be: {{ calories }}</p>
          <p>{{ calorieCondition }}</p>
        </div>
      </div>
    </div>

    <script src="/scriptsheet/calories.js"></script>
  </body>
</html>
